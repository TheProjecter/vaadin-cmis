		  <snapshots>
		    <enabled>true</enabled>
		    <updatePolicy>daily</updatePolicy>
		    <checksumPolicy>ignore</checksumPolicy>
		  </snapshots>
		</repository>
    
    
  </repositories>

  <pluginRepositories>
    <pluginRepository>
